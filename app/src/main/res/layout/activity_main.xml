            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:padding="0dp"
            android:layout_weight="1"
            android:src="@drawable/luna"
            android:id="@+id/carta3"/>
        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:padding="0dp"
            android:layout_weight="1"
