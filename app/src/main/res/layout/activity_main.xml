<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:layout_margin="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:layout_weight="1">

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:padding="0dp"
            android:adjustViewBounds="true"
            android:layout_weight="1"
            android:src="@drawable/apache"
            android:id="@+id/carta1"/>
        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:padding="0dp"
            android:layout_weight="1"
            android:src="@drawable/arbol"
            android:id="@+id/carta2"
            android:adjustViewBounds="true"/>
        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:padding="0dp"
            android:layout_weight="1"
            android:src="@drawable/luna"
            android:id="@+id/carta3"
            android:adjustViewBounds="true"/>
        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:padding="0dp"
            android:layout_weight="1"
            android:src="@drawable/arana"
            android:id="@+id/carta4"
            android:adjustViewBounds="true"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:layout_weight="1">

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:padding="0dp"
            android:layout_weight="1"
            android:src="@drawable/arpa"
            android:id="@+id/carta5"
            android:adjustViewBounds="true"/>
        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:padding="0dp"
            android:layout_weight="1"
            android:src="@drawable/maceta"
            android:id="@+id/carta6"
            android:adjustViewBounds="true"/>
        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:padding="0dp"
            android:layout_weight="1"
            android:src="@drawable/bandera"
            android:id="@+id/carta7"
            android:adjustViewBounds="true"/>
        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:padding="0dp"
            android:layout_weight="1"
            android:src="@drawable/jaras"
            android:id="@+id/carta8"
            android:adjustViewBounds="true"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:layout_weight="1">

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:padding="0dp"
            android:layout_weight="1"
            android:src="@drawable/camaron"
            android:id="@+id/carta9"
            android:adjustViewBounds="true"/>
        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:padding="0dp"
            android:layout_weight="1"
            android:src="@drawable/escalera"
            android:id="@+id/carta10"
            android:adjustViewBounds="true"/>
        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:padding="0dp"
            android:layout_weight="1"
            android:src="@drawable/mano"
            android:id="@+id/carta11"
            android:adjustViewBounds="true"/>
        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:padding="0dp"
            android:layout_weight="1"
            android:src="@drawable/garza"
            android:id="@+id/carta12"
            android:adjustViewBounds="true"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reiniciar"
            android:onClick="reiniciar"/>

    </LinearLayout>




</LinearLayout>